generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  phone       String
  school      String
  program     String
  username    String   @unique
  password    String
  isVerified        Boolean  @default(false) // Status verifikasi
  verificationToken String?  @unique         // Kode unik untuk link verifikasi
  createdAt DateTime @default(now())
  placeOfBirth    String?
  dateOfBirth     DateTime?
  rt              String?
  rw              String?
  village         String?
  subDistrict     String?
  district        String?
  province        String?
  fullAddress     String?
  gender          String?
  maritalStatus   String?
  religion        String?
  parentName      String?
  parentAddress   String?
  classType       String?
  documents     Document[]
}

model Document {
  id          Int        @id @default(autoincrement())
  name        String
  filePath    String
  createdAt   DateTime   @default(now())
  mahasiswa   Mahasiswa  @relation(fields: [mahasiswaId], references: [id])
  mahasiswaId Int
}