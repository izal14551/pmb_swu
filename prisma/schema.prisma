generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  phone       String
  school      String
  program     String
  username    String   @unique
  password    String
  isVerified        Boolean  @default(false) // Status verifikasi
  verificationToken String?  @unique         // Kode unik untuk link verifikasi
  
  createdAt DateTime @default(now())
}
